                        <TextBox x:Name="TextBox20" HorizontalContentAlignment="Center" Height="55" Text="{Binding scoring[14]}" VerticalContentAlignment="Center" Width="55" FontFamily="Stencil" FontSize="24" Margin="719,214,10,45"/>
                    </Grid>
